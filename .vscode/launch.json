    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to TF Plugin",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0,
            //"preLaunchTask": "Exec sg-tf-provider",
        },
        {
            "name": "Debug Terraform Provider",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // this assumes your workspace is the root of the repo
            "program": "${workspaceFolder}",
            "env": {},
            "args": [
                "-debug",
            ]
        }
    ]
}
